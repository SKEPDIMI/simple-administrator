<p id="notice"><%= notice %></p>

<h1>Permission Codes</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @permission_codes.each do |permission_code| %>
      <tr>
        <td><%= permission_code.body %></td>
        <td><%= permission_code.role %></td>
        <td><%= link_to 'Show', permission_code %></td>
        <td><%= link_to 'Edit', edit_permission_code_path(permission_code) %></td>
        <td><%= link_to 'Destroy', permission_code, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Permission Code', new_permission_code_path %>
