<p id="notice"><%= notice %></p>

<p>
  <h1><%= "#{@user.first_name} #{@user.last_name}" %></h1>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Role:</strong>
  <%= readable_role(@user.role) %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @user.phone %>
</p>

<% if same_user?(@user.id) %>
  "we are the same user"
<% end %>
<% if current_user_is_admin && @user.role != 1 %>
  "we are admin and the user is not an admin"  
<% end %>

<%= link_to 'Show', users_path %>

<% if we_can_edit(@user) %>
  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure you want to delete this account?' } %>
<% end %>
