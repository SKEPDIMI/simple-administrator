<p id="notice"><%= notice %></p>

<p>
  <h1><%= "#{@user.first_name} #{@user.last_name}" %></h1>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Role:</strong>
  <%= @user.role %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @user.phone %>
</p>

<% if current_user_is(1) || same_user(@user.id) %>
  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure you want to delete this account?' } %>
<% end %>