<p id="notice"><%= notice %></p>

<h1>Workers</h1>

<% if !logged_in? %>
  <i>Only logged in users can view workers</i>
<% else %>
  <table>
    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Sub contractor</th>
        <th>Pay</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @workers.each do |worker| %>
        <tr>
          <td><%= worker.first_name %></td>
          <td><%= worker.last_name %></td>
          <td><%= link_to worker.sub_contractor.name, worker.sub_contractor %></td>
          <td>$<%= worker.pay %></td>
          <td><%= link_to 'Show', worker %></td>
          <td><%= link_to 'Edit', edit_worker_path(worker) %></td>
          <td><%= link_to 'Destroy', worker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<% if logged_in? %>
  <%= link_to 'New worker', new_worker_path %>
<% end %>